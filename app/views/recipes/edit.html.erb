<h1> Edit Recipe: <%= @recipe.title %> </h1>

<%= form_for @recipe do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :made_it_yet %>
    <%= f.check_box :made_it_yet %>
  </div>
  <%= f.submit "Confirm Edits to Recipe" %> <!-- PATCH to `/recipes/:id` -->

  <div>
  <h4> Ingredients </h4>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
     <p><%= label_tag 'new_ingredients', 'Add New Ingredients Below; Please Separate Names with Commas' %></p>
    <p><%= text_area_tag :new_ingredients %></p>

  </div>
<% end %>

<%= link_to 'Cancel', recipe_path(@recipe) %>


