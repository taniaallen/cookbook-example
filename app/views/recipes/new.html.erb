<h1> New Recipe </h1>

<%= form_for @recipe do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :made_it_yet %>
    <%= f.check_box :made_it_yet %>
  </div>

  <div>
    <h4> Ingredients </h4>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
      <p><%= label_tag 'new_ingredients', 'Add New Ingredients Below; Please Separate Names with Commas' %></p>
      <p><%= text_area_tag :new_ingredients %></p>
  </div>  
  
  <%= f.submit "New Recipe" %> <!-- POST to `/recipes` -->
<% end %>

<%= link_to 'Cancel', recipes_path %>
